FROM openjdk:8-jdk-alpine
VOLUME /tmp
ARG DEPENDENCY=.
COPY ${DEPENDENCY}/BOOT-INF/lib /app/lib
COPY ${DEPENDENCY}/META-INF /app/META-INF
COPY ${DEPENDENCY}/BOOT-INF/classes /app
ENTRYPOINT ["java","-cp","app:app/lib/*", "-Dspring.data.mongodb.uri=mongodb://mongodb-server/cupitor-db","com.satya.Application"]
